{% extends '@AdminBundle/layout.twig' %}
{% block title %}产品分类管理{% endblock %}
{% set leftMenuActive='ProductCategory' %}

{% block contentRight %}

    <div class="page-title">产品分类管理</div>

    <div class="content-top">
        <ul class="top-nav">
            <li class="active"><a href="">修改产品分类</a></li>
        </ul>
        <div class="clearfix"></div>
    </div>

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">

                {# 错误提示信息 #}
                {% if error is defined and error is not empty %}
                <div class="ui-tips bg-info">
                    <span class="icon glyphicon glyphicon-info-sign"></span>
                    <span>{{ error }}</span>
                </div>
                {% endif %}

                {# 表单 #}
                <form class="form-horizontal mt15" action="{{ url('admin/product-category/update',{'id': entity.id}) }}" method="post">

                    <input type="hidden" name="returnUrl" value="{{ app.request.get('returnUrl', '')}}">

                    {{ include('@AdminBundle/product-category/_form.twig') }}

                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-8">
                            <button type="submit" class="btn btn-primary">提交</button>
                        </div>
                    </div>

                </form>
                <div class="mt15"></div>
            </div>
        </div>
    </div>
{% endblock %}
