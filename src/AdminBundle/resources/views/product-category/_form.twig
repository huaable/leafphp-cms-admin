<div class="form-group">
    <label class="col-sm-2 control-label" for="input-parent_id">{{ entity.labels().parent_id }}</label>
    <div class="col-sm-8">
        <select name="ProductCategory[parent_id]" class="form-control" id="input-parent_id">
            <option value="0">无</option>
            {% for item in categoryList %}
                {% if entity.id != item.id %}
                    <option value="{{ item.id }}" {{ app.request.get('ProductCategory').parent_id|default(entity.parent_id) == item.id?'selected':'' }}>

                        {% if(item.level > 1)  %}
                            {% for i in 1..item.level %}
                                &nbsp;&nbsp;
                            {% endfor %}
                        {% endif %}
                        {{ item.name }}

                    </option>
                {% endif %}
            {% endfor %}
        </select>
        <span class="help-block">{# 帮助信息 #}</span>
    </div>
</div>

