{% extends "main.twig" %}

{% block main %}
    <style>
        html
        {
            height: 100%;
        }
        body{
            height: 100%;
            background:url("{{ asset('static/admin/img/login.jpg') }}") no-repeat center  top;
            background-size: cover;
        }
        .login-box{
            position: fixed;
            right: 0;
            top: 0;
            bottom: 0;
            background-color: #fff;
            width: 460px;
            /*color: #fff;*/
        }
        .login-box a{
            color: inherit!important;
        }

        .login-panel{
            padding-top: 160px;
        }

        .login-panel .title{
            /*text-align: center;*/
            font-size: 24px;
            font-weight: 600;
            margin-bottom: 20px;

        }
        .login-box .form-control{
            box-shadow: none;
        }
    </style>
    <div class="login-box">

    {#<img src="{{ asset('static/admin/img/login.jpg') }}" alt=""/>#}
    <div class="container-fluid" >
        <div class="row">
            <div class="col-md-12">
                <div class="login-panel">
                    <div class="panel-heading"></div>


                    <div class="row">
                        <div class="col-md-3 "></div>
                        <div class="col-md-8 title">后台登录</div>
                    </div>
                    <div class="panel-body">




                        <form class="form-horizontal" method="POST" action="{{ url('admin/login') }}" autocomplete="off">


                            <div class="form-group {# has-error #} ">
                                <label class="col-md-3 control-label">邮箱</label>

                                <div class="col-md-8">
                                    <input type="text" class="form-control" name="loginId" value=""  autocomplete="off">


                                    {#<span class="help-block">
                                            <strong></strong>
                                    </span>#}

                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-md-3 control-label">密码</label>

                                <div class="col-md-8">
                                    <input type="password" class="form-control" name="password" autocomplete="new-password">

                                    <span class="help-block">
                                        <strong></strong>
                                    </span>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-8 col-md-offset-3">
                                    <div class="checkbox">
                                        <label>
                                            <input type="checkbox" name="remember" value="1"> 记住我
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-3 "></div>
                                <div class="col-md-8 ">

                                    {% if app.session.hasFlash('message') %}
                                        <div class="text-danger">{{ app.session.getFlash('message') }}</div>
                                    {% endif %}
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-8 col-md-offset-3">
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fa fa-btn fa-sign-in"></i>登录
                                    </button>

                                    <a class="btn btn-link" href="{{ url('admin/password/forgot') }}">忘记密码?</a>
                                    <a class="btn btn-link" href="{{ url('admin/register') }}">没有帐号?</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>

{% endblock %}
