{% extends '@AdminBundle/layout.twig' %}
{% block title %}产品管理{% endblock %}
{% set leftMenuActive='Product' %}

{% block contentRight %}

    <div class="page-title">产品管理</div>

    <div class="content-top">
        <ul class="top-nav">
            <li class="active"><a href="">查看产品</a></li>
        </ul>
        <div class="clearfix"></div>
    </div>

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">

                <div class="mt15">
                    <div class="pull-right">
                        <a class="btn btn-primary btn-sm" href="{{ url('admin/product/update',{'id':entity.id}) }}"><span class="glyphicon glyphicon-edit"></span> 修改</a>
                    </div>
                    <div class="clearfix"></div>
                </div>

                {# 一次性消息提示 #}
                {% include 'message.twig' %}

                <table class="table mt15">
                    <tr>
                        <td>{{ entity.labels().id }}</td>
                        <td>{{ entity.id }}</td>
                    </tr>

                    <tr>
                        <td>{{ entity.labels().category_id }}</td>
                        <td>{{ entity.category_id }}</td>
                    </tr>

                    <tr>
                        <td>{{ entity.labels().status }}</td>
                        <td>{{ entity.status }}</td>
                    </tr>

                    <tr>
                        <td>{{ entity.labels().title }}</td>
                        <td>{{ entity.title }}</td>
                    </tr>

                    <tr>
                        <td>{{ entity.labels().description }}</td>
                        <td>{{ entity.description }}</td>
                    </tr>

                    <tr>
                        <td>{{ entity.labels().image }}</td>
                        <td>{{ entity.image }}</td>
                    </tr>

                    <tr>
                        <td>{{ entity.labels().content }}</td>
                        <td>{{ entity.content }}</td>
                    </tr>

                    <tr>
                        <td>{{ entity.labels().content1 }}</td>
                        <td>{{ entity.content1 }}</td>
                    </tr>

                    <tr>
                        <td>{{ entity.labels().content2 }}</td>
                        <td>{{ entity.content2 }}</td>
                    </tr>

                    <tr>
                        <td>{{ entity.labels().created_at }}</td>
                        <td>{{ entity.created_at }}</td>
                    </tr>

                    <tr>
                        <td>{{ entity.labels().updated_at }}</td>
                        <td>{{ entity.updated_at }}</td>
                    </tr>

                </table>

            </div>
        </div>
    </div>

{% endblock %}
